<script>
	$(document).ready(function() {
		function setDateInput() {	
			var now = new Date();
			var hours = now.getHours();
			var ampm = hours >= 12 ? " PM" : " AM";
			hours = hours >= 12 ? hours - 12 : hours;
			var mins = now.getMinutes();
			if (mins > 0 && mins < 15)
				mins = 15;
			else if (mins > 15 && mins < 30)
				mins = 30;
			else if (mins > 30 && mins < 45)
				mins = 45;
			else if (mins > 45 && mins < 60) {
				hours ++;
				mins = 0;
			}
			now.setHours(hours);
			now.setMinutes(mins);
			for (var i = 0; i < 12; i++) {
				if (mins == 0) {
					if (i < 8)
						$("#time1").append("<option>" + hours + ":00" + ampm + "</option>");
					$("#time2").append("<option>" + hours + ":00" + ampm + "</option>");
				}
				else {
					if (i < 8)
						$("#time1").append("<option>" + hours + ":" + mins + ampm + "</option>");
					$("#time2").append("<option>" + hours + ":" + mins + ampm + "</option>");
				}
				mins += 15;
				if (mins % 60 == 0) {
					mins = 0;
					hours++;
				}
			};
		}

		$("button#submit").click(function() {
			var locations = ["Engineering", "Huntsman", "Harnwell", "Harrison", "Rodin", "VP", "Radian"];
			var loc = [];
			var flag1 = false;
			for (var i = 0; i < locations.length; i++) {
				if ($("#" + locations[i]).is(":checked")) {
					flag1 = true;
					loc.push($("#" + locations[i]).val());
				}
			}
			var trucks = ["Magic", "NYG", "YueKee"];
			var tr = [];
			var flag2 = false;
			for (var i = 0; i < trucks.length; i++) {
				if ($("#" + trucks[i]).is(":checked")) {
					flag2 = true;
					tr.push($("#" + trucks[i]).val());
				}
			}
			var t1 = $("#time1").val();
			var t2 = $("#time2").val();
			if (loc.length == 0) {
				$("#data").text("Select at least one delivery location!");
			}
			else if (tr.length == 0) {
				$("#data").text("Select at least one food truck!");
			}
			else if (t1 == "Pick Time" || t2 == "Pick Time") {
				$("#data").text("Please complete all fields to continue!");
			}
			else {
				var now = new Date();
				var json_data = {
					"pickuptime": t1,
					"eta": t2,
					"location": loc,
					"truck": tr
				}
				$.post("/submitRun", json_data, 
              		function(data){
          				if(!data.success) {
            				console.log("error");
          				}
          				else {
           					 console.log("food run added");
          				}
        		});
			}
		});

		$.get("/getInfo", function(data, status){
			$("#firstname").text(data.fullname.split(" ")[0]);
			$("#img2").attr("src", data.image);
		});

		$("button#logout").click(function() {
			$.get("/logout", function(data, status){
				window.location.replace("/");
			});
		});
		setDateInput();
	});
</script>

